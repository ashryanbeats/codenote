{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev:web": "deno run -A npm:vite",
    "dev:api": "deno run -A --env-file=.env server/server.ts",
    "build": "deno run -A npm:vite build",
    "start": "deno run -A --env-file=.env server/server.ts",
    "lint": "deno lint $(find . -path '*/node_modules' -prune -o -path '*/dist' -prune -o -path './src/lib/tslibs' -prune -o -path './public/tslibs' -prune -o -type f \\( -name '*.ts' -o -name '*.tsx' \\) -print)",
    "typecheck": "deno check --config deno.json $(find . -path '*/node_modules' -prune -o -path '*/dist' -prune -o -path './src/lib/tslibs' -prune -o -path './public/tslibs' -prune -o -type f \\( -name '*.ts' -o -name '*.tsx' \\) -print)",
    "check": "sh -c 'deno task lint; lint_status=$?; deno task typecheck; type_status=$?; if [ $lint_status -ne 0 ] || [ $type_status -ne 0 ]; then exit 1; fi'",
    "db:generate": "deno run -A --env-file=.env npm:drizzle-kit generate",
    "db:migrate": "deno run -A --env-file=.env db/migrate.ts"
  },
  "imports": {
    "@/": "./src/",
    "@std/assert": "jsr:@std/assert@1",
    "@std/http": "jsr:@std/http@^1.0.23",
    "@codemirror/autocomplete": "npm:@codemirror/autocomplete@^6.18.0",
    "@codemirror/commands": "npm:@codemirror/commands@^6.6.0",
    "@codemirror/lang-javascript": "npm:@codemirror/lang-javascript@^6.2.0",
    "@codemirror/lint": "npm:@codemirror/lint@^6.9.2",
    "@codemirror/state": "npm:@codemirror/state@^6.4.1",
    "@codemirror/view": "npm:@codemirror/view@^6.36.0",
    "@radix-ui/react-dialog": "npm:@radix-ui/react-dialog@^1.1.2",
    "@radix-ui/react-slot": "npm:@radix-ui/react-slot@^1.1.0",
    "@uiw/react-codemirror": "npm:@uiw/react-codemirror@^4.23.0",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^5.1.2",
    "autoprefixer": "npm:autoprefixer@^10.4.0",
    "class-variance-authority": "npm:class-variance-authority@^0.7.0",
    "clsx": "npm:clsx@^2.1.0",
    "drizzle-kit": "npm:drizzle-kit@^0.31.8",
    "drizzle-orm": "npm:drizzle-orm@^0.45.1",
    "lucide-react": "npm:lucide-react@^0.468.0",
    "postcss": "npm:postcss@^8.4.0",
    "postgres": "npm:postgres@^3.4.8",
    "react": "npm:react@^19.2.3",
    "react-dom": "npm:react-dom@^19.2.3",
    "react-router-dom": "npm:react-router-dom@^7.12.0",
    "tailwind-merge": "npm:tailwind-merge@^2.5.0",
    "tailwindcss": "npm:tailwindcss@^3.4.0",
    "tailwindcss-animate": "npm:tailwindcss-animate@^1.0.7",
    "typescript": "npm:typescript@^5.6.3",
    "vite": "npm:vite@^7.3.1"
  },
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "react",
    "types": ["npm:@types/react@^19.0.0", "npm:@types/react-dom@^19.0.0"]
  }
}
